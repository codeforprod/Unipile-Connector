{
  "name": "@unipile/core",
  "version": "0.1.0",
  "description": "Framework-agnostic Unipile API client for email, messaging, and LinkedIn Sales Navigator",
  "license": "MIT",
  "author": "AIRIS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/codeforprod/Unipile-Connector",
    "directory": "packages/core"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./interfaces": {
      "types": "./dist/interfaces/index.d.ts",
      "import": "./dist/interfaces/index.js"
    },
    "./enums": {
      "types": "./dist/enums/index.d.ts",
      "import": "./dist/enums/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:cov": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.12",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "unipile",
    "email",
    "messaging",
    "linkedin",
    "sales-navigator",
    "whatsapp",
    "instagram",
    "telegram",
    "slack",
    "api-client"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
