{
  "name": "@prodforcode/unipile-core",
  "version": "0.3.1",
  "description": "Framework-agnostic Unipile API client for email, messaging, and LinkedIn Sales Navigator",
  "license": "MIT",
  "author": "AIRIS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/codeforprod/Unipile-Connector",
    "directory": "packages/core"
  },
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./interfaces": {
      "import": {
        "types": "./dist/types/interfaces/index.d.ts",
        "default": "./dist/esm/interfaces/index.js"
      },
      "require": {
        "types": "./dist/types/interfaces/index.d.ts",
        "default": "./dist/cjs/interfaces/index.cjs"
      }
    },
    "./enums": {
      "import": {
        "types": "./dist/types/enums/index.d.ts",
        "default": "./dist/esm/enums/index.js"
      },
      "require": {
        "types": "./dist/types/enums/index.d.ts",
        "default": "./dist/cjs/enums/index.cjs"
      }
    },
    "./services": {
      "import": {
        "types": "./dist/types/services/index.d.ts",
        "default": "./dist/esm/services/index.js"
      },
      "require": {
        "types": "./dist/types/services/index.d.ts",
        "default": "./dist/cjs/services/index.cjs"
      }
    },
    "./errors": {
      "import": {
        "types": "./dist/types/errors/index.d.ts",
        "default": "./dist/esm/errors/index.js"
      },
      "require": {
        "types": "./dist/types/errors/index.d.ts",
        "default": "./dist/cjs/errors/index.cjs"
      }
    },
    "./http": {
      "import": {
        "types": "./dist/types/http/index.d.ts",
        "default": "./dist/esm/http/index.js"
      },
      "require": {
        "types": "./dist/types/http/index.d.ts",
        "default": "./dist/cjs/http/index.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/types/client/index.d.ts",
        "default": "./dist/esm/client/index.js"
      },
      "require": {
        "types": "./dist/types/client/index.d.ts",
        "default": "./dist/cjs/client/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf dist coverage",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && node scripts/rename-cjs.js",
    "build:markers": "echo '{\"type\":\"module\"}' > dist/esm/package.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:markers",
    "dev": "tsc -p tsconfig.esm.json --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:cov": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.12",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "unipile",
    "email",
    "messaging",
    "linkedin",
    "sales-navigator",
    "whatsapp",
    "instagram",
    "telegram",
    "slack",
    "api-client",
    "esm",
    "commonjs",
    "dual-package"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
